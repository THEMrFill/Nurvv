<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mainMargin"
            />
    <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cityName"
            android:layout_marginStart="@dimen/mainMargin"
            android:layout_marginTop="@dimen/mainMargin"
            />
    <TextView
            android:id="@+id/weather2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cityName"
            android:layout_below="@id/weather"
            android:layout_marginStart="@dimen/mainMargin"
            />
    <TextView
            android:id="@+id/weather3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cityName"
            android:layout_below="@id/weather2"
            android:layout_marginStart="@dimen/mainMargin"
            />
</RelativeLayout>